---
import type { Role, RPlayer } from "../lib/keys";

const { players } = Astro.props as { players: RPlayer[] };

function showImg(role: Role, index: number): boolean {
	if (role !== 'dps') return true;
	return index === 0;
}
---

<div class="players">
	{
		players.map((p, i) => (
			<>
				{showImg(p.role, i) ? <img class="role-img" src=`images/roles/${p.role}.webp` /> : <></>}
				<a class={p.type.toLowerCase()} href={p.rioUrl}>
					{p.name}
				</a>
			</>
		))
	}
</div>

<style>
	a {
		color: inherit;
		text-decoration: none;
		padding-right: 0.3em;
	}

  a:last-of-type {
    padding-right: 0em;
  }

	.role-img {
		height: 1em;
		width: auto;
		padding-right: 0.2em;
	}

	.players {
		color: #f4ebd0;
		font-size: 0.8em;
		margin-top: auto;
		margin-bottom: auto;

		display: flex;
		text-align: center;
		align-items: center;
	}

	.deathknight {
		color: #c41e3a;
	}

	.demonhunter {
		color: #a330c9;
	}

	.druid {
		color: #ff7c0a;
	}

	.evoker {
		color: #33937f;
	}

	.hunter {
