---
import type { Parsed } from "../lib/parse";
import Players from "./Players.astro";

const { key, level, timed, finished, time, players, url } =
  Astro.props as Parsed;

const keyExecution = timed ? "pass" : finished ? "fail" : "left";

const healerTank = players.slice(0, 2);
const dps = players.slice(2);
---

<div class="row">
  <div class="subRow" style={{ paddingBottom: "0.2em" }}>
    <div>
      <a class={keyExecution} href={url}>
        {key} - {level}
      </a>
    </div>
    <Players players={healerTank} />
  </div>

  <div class="subRow">
    <div class="timer">{time === "00:00" ? "xx:xx" : time}</div>
    <Players players={dps} />
  </div>
</div>

<style>
  .row {
    padding-bottom: 0.5em;
    padding-top: 0.4em;
    border-bottom: solid 0.1em #1f1f1f;
  }
  .row:last-of-type {
    border-bottom: none;
  }

  .subRow {
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    color: #f4ebd0;
  }

  .timer {
    font-size: 0.9em;
  }
  a {
    color: inherit;
    text-decoration: none;
  }

  .pass {
    color: green;
  }
  .fail {
    color: darkred;
  }
  .left {
    color: darkred;
    text-decoration: line-through;
  }
</style>
